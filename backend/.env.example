# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database - UPDATE WITH YOUR POSTGRESQL CREDENTIALS
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# JWT Secrets - GENERATE NEW SECRETS FOR PRODUCTION
JWT_ACCESS_SECRET=your-super-secure-jwt-access-secret-here
JWT_REFRESH_SECRET=your-super-secure-jwt-refresh-secret-here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits (in bytes)
MAX_FILE_SIZE_IMAGE=5242880
MAX_FILE_SIZE_VIDEO=52428800
MAX_FILE_SIZE_DOCUMENT=10485760

# Logging
LOG_LEVEL=info